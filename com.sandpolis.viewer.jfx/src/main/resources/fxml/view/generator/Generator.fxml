<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>

<?import com.sandpolis.viewer.jfx.common.pane.ExtendPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.sandpolis.viewer.jfx.view.generator.GeneratorController">
	<center>
		<ExtendPane fx:id="extend">
			<main>
				<BorderPane>
					<left>
						<ToolBar focusTraversable="false" orientation="VERTICAL">
							<items>
								<Button id="btn_add_server"
									onAction="#add_network_target">
									<tooltip>
										<Tooltip text="Add a new server" />
									</tooltip>
								</Button>
								<Button id="btn_add_plugin" onAction="#add_plugin">
									<tooltip>
										<Tooltip text="Add a new plugin" />
									</tooltip>
								</Button>
								<Button id="btn_add_group" onAction="#add_group">
									<tooltip>
										<Tooltip text="Add a new authentication group" />
									</tooltip>
								</Button>
								<Separator orientation="VERTICAL" prefHeight="16.0"
									visible="false" />
								<Button id="btn_generate" onAction="#generate">
									<tooltip>
										<Tooltip text="Generate" />
									</tooltip>
								</Button>
							</items>
						</ToolBar>
					</left>
					<center>
						<TreeView fx:id="tree" />
					</center>
				</BorderPane>
			</main>
		</ExtendPane>
	</center>
</BorderPane>
