<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" styleClass="main_menu-panel"
	xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.sandpolis.viewer.jfx.view.main.menu.InterfaceController">
	<children>
		<Label alignment="CENTER" styleClass="main_menu-header"
			text="Interface">
			<graphic>
				<ImageView fitHeight="16.0" fitWidth="16.0"
					pickOnBounds="true" preserveRatio="true">
					<image>
						<Image url="/image/icon16/common/application.png" />
					</image>
				</ImageView>
			</graphic>
		</Label>
		<VBox styleClass="main_menu-subpanel">
			<children>
				<Button mnemonicParsing="false" onAction="#open_list"
					styleClass="main_menu-button" text="Host List">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0"
							pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="/image/icon16/common/view_list.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
				<Button mnemonicParsing="false" onAction="#open_graph"
					styleClass="main_menu-button" text="Host Graph">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0"
							pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="/image/icon16/common/view_graph.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
				<Button mnemonicParsing="false" styleClass="main_menu-button"
					text="Timeline">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0"
							pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="/image/icon16/common/view_history.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
			</children>
		</VBox>
		<VBox styleClass="main_menu-subpanel">
			<children>
				<Button mnemonicParsing="false" styleClass="main_menu-button"
					text="Console" />
				<Button mnemonicParsing="false" styleClass="main_menu-button"
					text="Status" />
			</children>
		</VBox>
		<VBox styleClass="main_menu-subpanel">
			<children>
				<Button onAction="#background" mnemonicParsing="false"
					styleClass="main_menu-button" text="Background">
					<tooltip>
						<Tooltip styleClass=".main_menu-tooltip"
							text="Minimize to the system tray" />
					</tooltip>
				</Button>
				<Button onAction="#quit" mnemonicParsing="false"
					styleClass="main_menu-button" text="Quit">
					<tooltip>
						<Tooltip styleClass=".main_menu-tooltip"
							text="Exit the application" />
					</tooltip>
				</Button>
			</children>
		</VBox>
	</children>
	<padding>
		<Insets left="4.0" right="4.0" />
	</padding>
</VBox>
