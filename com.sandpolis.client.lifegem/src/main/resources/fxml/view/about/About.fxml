<?import com.sandpolis.client.lifegem.common.button.SvgButton?>
<?import com.sandpolis.client.lifegem.common.label.DateLabel?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/9"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.sandpolis.client.lifegem.view.about.AboutController">
	<bottom>
		<ButtonBar prefHeight="40.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<buttons>
				<Button mnemonicParsing="false" text="Website"
					id="about-btn_website" onAction="#open_website" />
				<SvgButton mnemonicParsing="false" text="GitHub"
					id="about-btn_github" onAction="#open_github" />
				<Button mnemonicParsing="false" text="Close"
					fx:id="btn_close" onAction="#close" />
			</buttons>
		</ButtonBar>
	</bottom>
	<center>
		<BorderPane BorderPane.alignment="CENTER">
			<center>
				<GridPane hgap="20.0">
					<columnConstraints>
						<ColumnConstraints halignment="LEFT"
							hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
						<ColumnConstraints halignment="LEFT"
							hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label text="Version" />
						<Label text="Build Timestamp" GridPane.rowIndex="1" />
						<Label text="Build Platform" GridPane.rowIndex="2" />
						<Label text="Build Java Version" GridPane.rowIndex="3" />
						<Label text="Current Java Version" GridPane.rowIndex="4" />
						<Label text="Application Uptime" GridPane.rowIndex="5" />

						<Label fx:id="version" GridPane.columnIndex="1" />
						<Label fx:id="build_time" GridPane.columnIndex="1"
							GridPane.rowIndex="1" />
						<Label fx:id="build_platform" GridPane.columnIndex="1"
							GridPane.rowIndex="2" />
						<Label fx:id="build_version" GridPane.columnIndex="1"
							GridPane.rowIndex="3" />
						<Label fx:id="java_version" GridPane.columnIndex="1"
							GridPane.rowIndex="4" />
						<DateLabel fx:id="java_uptime" GridPane.columnIndex="1"
							GridPane.rowIndex="5" />
					</children>
				</GridPane>
			</center>
			<right>
				<TableView fx:id="configuration">
					<columns>
						<TableColumn text="Configuration">
							<cellValueFactory>
								<PropertyValueFactory property="key" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn text="Value">
							<cellValueFactory>
								<PropertyValueFactory property="value" />
							</cellValueFactory>
						</TableColumn>
					</columns>
				</TableView>
			</right>
			<GridPane.margin>
				<Insets />
			</GridPane.margin>
			<padding>
				<Insets top="5.0" />
			</padding>
		</BorderPane>
	</center>
	<padding>
		<Insets bottom="4.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	<top>
		<BorderPane fx:id="sub" prefHeight="175.0"
			id="about-logo_background" />
	</top>
</BorderPane>
