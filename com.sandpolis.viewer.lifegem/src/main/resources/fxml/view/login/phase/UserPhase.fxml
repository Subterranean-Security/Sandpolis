<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/10.0.2-internal"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.sandpolis.viewer.lifegem.view.login.phase.UserPhaseController">
	<padding>
		<Insets left="10.0" right="10.0" />
	</padding>
	<TitledPane fx:id="server_info" text="Server Info">
		<GridPane vgap="2.0">
			<columnConstraints>
				<ColumnConstraints halignment="RIGHT"
					hgrow="SOMETIMES" percentWidth="20.0" />
				<ColumnConstraints halignment="RIGHT"
					hgrow="SOMETIMES" percentWidth="5.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					percentWidth="35.0" />
				<ColumnConstraints halignment="RIGHT"
					hgrow="SOMETIMES" percentWidth="20.0" />
				<ColumnConstraints halignment="RIGHT"
					hgrow="SOMETIMES" percentWidth="5.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					percentWidth="15.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Server IP:" />
				<Label text="Certificate:" GridPane.rowIndex="1" />
				<Label text="UUID:" GridPane.rowIndex="2" />
				<Label fx:id="server_ip" styleClass="login-info_field"
					GridPane.columnIndex="2" />
				<Label fx:id="server_certificate"
					styleClass="login-info_field" GridPane.columnIndex="2"
					GridPane.rowIndex="1" />
				<Label fx:id="server_uuid" styleClass="login-info_field"
					GridPane.columnIndex="2" GridPane.columnSpan="3"
					GridPane.rowIndex="2" />
				<Label text="Version:" GridPane.columnIndex="3" />
				<Label text="Ping:" GridPane.columnIndex="3"
					GridPane.rowIndex="1" />
				<Label fx:id="server_version" styleClass="login-info_field"
					GridPane.columnIndex="5" />
				<Label fx:id="server_ping" nodeOrientation="RIGHT_TO_LEFT"
					styleClass="login-info_field" GridPane.columnIndex="5"
					GridPane.rowIndex="1">
					<graphic>
						<ProgressIndicator fx:id="ping_indicator"
							nodeOrientation="LEFT_TO_RIGHT" prefHeight="24.0"
							prefWidth="24.0" progress="0.0" />
					</graphic>
				</Label>
			</children>
		</GridPane>
	</TitledPane>
	<TitledPane collapsible="false" text="User Credentials">
		<GridPane hgap="40.0" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			vgap="2.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					percentWidth="50.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					percentWidth="50.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Username" GridPane.halignment="CENTER" />
				<Label text="Password" GridPane.columnIndex="1"
					GridPane.halignment="CENTER" />
				<TextField fx:id="username" styleClass="login-field"
					GridPane.rowIndex="1" />
				<PasswordField fx:id="password"
					styleClass="login-field" GridPane.columnIndex="1"
					GridPane.rowIndex="1" />
			</children>
		</GridPane>
	</TitledPane>
</VBox>
